{
  "name": "runflow",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.12.2",
  "scripts": {
    "dev": "turbo dev",
    "dev:api": "pnpm exec dotenv -e .env -- pnpm --filter @runflow/api dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "turbo test",
    "format": "prettier --write .",
    "db:migrate": "pnpm exec dotenv -e .env -- supabase db push --workdir infra/supabase",
    "db:reset": "pnpm exec dotenv -e .env -- supabase db reset --workdir infra/supabase",
    "db:test": "pnpm exec dotenv -e .env -- sh -c 'for test in infra/supabase/tests/*.sql; do echo \"Running $test...\"; psql \"$DATABASE_URL\" -v ON_ERROR_STOP=1 -f \"$test\" || exit 1; done; echo \"\\nâœ“ All database tests passed!\"'",
    "test:unit": "turbo test",
    "test:db": "pnpm db:test",
    "test:api": "pnpm exec dotenv -e .env -- pnpm --filter @runflow/api test",
    "test:all": "pnpm test:unit && pnpm test:db",
    "test:coverage": "turbo test -- --coverage",
    "test:watch": "turbo test -- --watch",
    "typecheck": "turbo build",
    "setup": "pnpm install && pnpm build",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules apps/*/dist packages/*/dist .turbo",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitest/coverage-v8": "^2.1.4",
    "dotenv-cli": "^11.0.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.3.3",
    "turbo": "^2.2.3",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  }
}
