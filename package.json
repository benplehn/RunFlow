    "format": "prettier --write .",
    "supabase:start": "supabase start --workdir infra/supabase",
    "supabase:stop": "supabase stop --workdir infra/supabase",
    "supabase:status": "supabase status --workdir infra/supabase",
    "supabase:restart": "pnpm supabase:stop && pnpm supabase:start",
    "db:migrate": "DB_URL=\"${DATABASE_URL:-postgres://postgres:postgres@localhost:54322/postgres}\"; PGSSLMODE=\"${PGSSLMODE:-disable}\" supabase db push --workdir infra/supabase --db-url \"$DB_URL\"",
    "db:reset": "DB_URL=\"${DATABASE_URL:-postgres://postgres:postgres@localhost:54322/postgres}\"; PGSSLMODE=\"${PGSSLMODE:-disable}\" supabase db reset --workdir infra/supabase --db-url \"$DB_URL\" --no-confirmation",
    "db:test": "DB_URL=\"${DATABASE_URL:-postgres://postgres:postgres@localhost:54322/postgres?sslmode=disable}\"; for test in infra/supabase/tests/*.sql; do echo \"Running $test...\"; psql \"$DB_URL\" -f \"$test\" || exit 1; done; echo \"\\nâœ“ All database tests passed!\"",
    "db:setup": "pnpm supabase:start && pnpm db:migrate",
    "test:unit": "turbo test",
    "test:db": "pnpm db:test",
    "test:all": "pnpm test:unit && pnpm test:db",
    "test:coverage": "turbo test -- --coverage",
    "test:watch": "turbo test -- --watch",
    "setup": "pnpm install && pnpm db:setup && pnpm build",
    "clean": "turbo clean && rm -rf node_modules apps/*/node_modules packages/*/node_modules"
  },
  "devDependencies": {
